{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:30000",
    "distDir": "../dist",
    "withGlobalTauri": true
  },

  "package": {
    "productName": "misakura",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "open": true
      },
      "fs": {
        "createDir": true,
        "exists": true,
        "readDir": true,
        "readFile": true,
        "removeFile": true,
        "writeFile": true,
        "scope": ["$RUNTIME"]
      },
      "window": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Misakura",
        "width": 1313,
        "height": 739
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.hotaru.misakura",
      "icon": ["icons/misakura.png", "icons/misakura.ico"],
      "copyright": "Â© Copyright 2024 Hotaru",
      "category": "WordGame"
    }
  }
}
